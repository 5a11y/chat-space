.message{data: {message: {id: message.id}}}
  .message__upper
    .message__upper__name
      = message.user.name
    .message__upper__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .message__bottom
    - if message.content.present?
      %p.message__bottom__content
        = message.content
    = image_tag message.image.url, class: 'message__bottom__image' if message.image.present?